pkgname=jcm
pkgver=1.2
pkgrel=6
pkgdesc="Juniu Connect Manager"
arch=('any')
url="mailto:chrisniu1984@gmail.com"
license=('custom')
depends=('python2' 'python2-gobject' 'bash' 'openssh' 'vte3')
install=install

package() {
    cd ${srcdir}

    DEST="$pkgdir/opt/$pkgname"

    install -d ${DEST}
    echo "${pkgver}.${pkgrel}" > ${DEST}/version
    install -m 0755 main.py ${DEST}
    install jcm.desktop ${DEST}
    rm -f `find ./ -name "*.pyc"`
    cp -r NIU plugins res ${DEST}
}

